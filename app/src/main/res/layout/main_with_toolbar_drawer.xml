<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/recipeMainImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Photo by Dan Gold on Unsplash"
        android:scaleType="centerInside"
        android:src="@drawable/recipe_main"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/recipeToolbarDrawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeMainText"
        app:layout_constraintVertical_bias="0.318" />

    <TextView
        android:id="@+id/recipeMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:text="@string/recipeapp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recipeToolbarDrawer" />

    <include
        android:id="@+id/recipeToolbarDrawer"
        layout="@layout/recipe_toolbar_drawer"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="31dp"></include>
</androidx.constraintlayout.widget.ConstraintLayout>